<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature_bg"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/victim_2z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_girl_1_zoom"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/pimples_z"
        android:layout_width="240dp"
        android:layout_height="175dp"
        android:layout_alignTop="@id/victim_2z"
        android:layout_alignEnd="@id/victim_2z"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="94dp"
        android:src="@drawable/ic_pimples"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pen"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/first_aid_kit_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_first_aid_kit"/>

    <com.example.android1project.HealthBar
        android:id="@+id/hp_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:padding="5dp"
        android:progress="100"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:background="@color/transparent"
        android:progressDrawable="@drawable/progress_drawable"/>

</RelativeLayout>