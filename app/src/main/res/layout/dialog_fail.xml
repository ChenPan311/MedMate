<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutDialogContainer"
    android:layout_margin="20dp"
    android:padding="20dp">
    
    <RelativeLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">
        
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/dlg_fail_title"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/dlg_fail_msg"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>
        
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/btn_dummy"
        android:layout_toStartOf="@id/btn_dummy"
        android:src="@drawable/ic_menu_btn"
        android:background="@color/transparent"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/btn_dummy"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="25dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/btn_restart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/btn_dummy"
        android:layout_toEndOf="@id/btn_dummy"
        android:src="@drawable/ic_restart_btn"
        android:background="@color/transparent"
        android:scaleType="fitCenter"/>

</RelativeLayout>