<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android1project">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GameMenuActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".ScoreBoardActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option1Preview"
            android:launchMode="singleTask"/>
        <activity android:name=".Option1Activity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option2Preview"
            android:launchMode="singleTask"/>
        <activity android:name=".Option2Activity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option3Preview"
            android:launchMode="singleTask"/>
        <activity android:name=".Option3Activity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option4Preview"
            android:launchMode="singleTask"/>
        <activity android:name=".Option4Activity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option5Activity"
            android:launchMode="singleTask"/>

        <activity android:name=".Option6Activity"
            android:launchMode="singleTask"/>

        <service android:name=".MusicService"
            android:enabled="true"/>

    </application>

</manifest>